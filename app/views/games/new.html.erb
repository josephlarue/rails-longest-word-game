<div class="flex">
<h1>Find the longest word out of this!</h1>
</div>

<br>
<div class="flex">
<% @array_of_letter.each do |letter| %>
<p><%= letter %><span></span></p>
<% end %>
</div>

<br>
<br>
<br>

<form action="/score" method="post" style=" text-align: center;">
  <input type="text" name="word"  placeholder="What is ur word?">
  <%= hidden_field_tag :letters, @array_of_letter %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value="Ask!" style=" background-color: blue; color: white;">
</form>
